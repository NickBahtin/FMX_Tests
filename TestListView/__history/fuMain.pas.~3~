unit fuMain;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs,
  FMX.ListView.Types, FMX.ListView.Appearances, FMX.ListView.Adapters.Base,
  FMX.Controls.Presentation, FMX.StdCtrls, FMX.Layouts, FMX.ListView,
  FMX.Effects, System.Rtti, FMX.Grid.Style, FMX.ScrollBox, FMX.Grid;

type
  //2025-07-02 - тестирование добавления таблиц и строк в TListView
  TForm1 = class(TForm)
    lvResults: TListView;
    Layout1: TLayout;
    btnAddString: TCornerButton;
    btnAddTable: TCornerButton;
    ShadowEffect1: TShadowEffect;
    ShadowEffect2: TShadowEffect;
    ShadowEffect3: TShadowEffect;
    ShadowEffect4: TShadowEffect;
    procedure btnAddTableClick(Sender: TObject);
    procedure btnAddStringClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.fmx}

procedure TForm1.btnAddStringClick(Sender: TObject);
var labT:TLabel;
begin
  labT:=TLabel.Create(lvResults);
  labT.Parent:=lvResults;
  labT.Tag:=btnAddString.Tag+1;
  labT.Margins.Left:=5;
  labT.Margins.Right:=5;
  labT.Margins.Top:=5;
  labT.Margins.Bottom:=5;
  labT.Align:=TAlignLayout.Top;
  labT.Text:='Редультат: '+IntToStr(labT.tag);
  lvResults.AddObject(labT);
  btnAddString.Tag:=labT.Tag;
end;

procedure TForm1.btnAddTableClick(Sender: TObject);
var grdT:TGrid;
begin
  grdT:=TGrid.Create(lvResults);
  grdT.Parent:=lvResults;
  grdT.Tag:=btnAddTable.Tag+1;
  grdT.Margins.Left:=5;
  grdT.Margins.Right:=5;
  grdT.Margins.Top:=5;
  grdT.Margins.Bottom:=5;
  grdT.Align:=TAlignLayout.Top;
  lvResults.AddObject(grdT);
  btnAddTable.Tag:=grdT.Tag;
end;

end.
